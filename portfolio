  <script>
    gsap.registerPlugin(ScrollTrigger)

    // HERO – parallax text
    gsap.from('.hero-title', {
      y: 120,
      opacity: 0,
      duration: 1.5,
      ease: 'power4.out'
    })

    gsap.from('.hero-sub', {
      y: 50,
      opacity: 0,
      stagger: 0.25,
      delay: 0.4,
      duration: 1
    })

    gsap.to('.hero-title', {
      scrollTrigger: {
        trigger: '#hero',
        start: 'top top',
        end: 'bottom top',
        scrub: true
      },
      y: -80
    })

    // SCROLL ANIMACE SEKCI
    gsap.utils.toArray('section').forEach(section => {
      gsap.from(section, {
        scrollTrigger: {
          trigger: section,
          start: 'top 85%'
        },
        y: 60,
        opacity: 0,
        duration: 1,
        ease: 'power3.out'
      })
    })

    // THREE.JS – 3D reagující na scroll
    const scene = new THREE.Scene()
    const camera = new THREE.PerspectiveCamera(70, window.innerWidth / window.innerHeight, 0.1, 1000)

    const renderer = new THREE.WebGLRenderer({ alpha: true })
    renderer.setSize(window.innerWidth, window.innerHeight)
    renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2))
    document.body.appendChild(renderer.domElement)

    const geometry = new THREE.TorusKnotGeometry(2.6, 0.6, 180, 32)
    const material = new THREE.MeshStandardMaterial({
      color: 0x4f8cff,
      metalness: 0.7,
      roughness: 0.25,
      transparent: true,
      opacity: 0.55
    })

    const mesh = new THREE.Mesh(geometry, material)
    scene.add(mesh)

    const light1 = new THREE.PointLight(0xffffff, 1)
    light1.position.set(6, 6, 6)

    const light2 = new THREE.PointLight(0x4f8cff, 1.2)
    light2.position.set(-6, -6, 6)

    scene.add(light1, light2)

    camera.position.z = 7

    // Scroll → rotace 3D
    ScrollTrigger.create({
      start: 0,
      end: 'max',
      onUpdate: self => {
        mesh.rotation.y = self.progress * Math.PI * 2
        mesh.rotation.x = self.progress * Math.PI
      }
    })

    function animate() {
      requestAnimationFrame(animate)
      renderer.render(scene, camera)
    }

    animate()

    window.addEventListener('resize', () => {
      camera.aspect = window.innerWidth / window.innerHeight
      camera.updateProjectionMatrix()
      renderer.setSize(window.innerWidth, window.innerHeight)
    })
  </script>

